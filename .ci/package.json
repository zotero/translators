{
  "name": "translators-check",
  "version": "1.0.2",
  "description": "Continuous integration of Zotero translators",
  "main": "index.js",
  "scripts": {
    "errors": "find .. -maxdepth 1 -name '*.js' -print0|xargs -0 eslint -c eslintrc --quiet",
    "test": "find .. -maxdepth 1 -name '*.js' -print0|xargs -0 eslint -c eslintrc",
    "start": "find .. -maxdepth 1 -name '*.js' -print0|xargs -0 eslint -c eslintrc --max-warnings 0"
  },
  "author": "kba+pz",
  "license": "CC0-1.0",
  "repository": {
    "url": "https://github.com/zotero/translators/blob/master/.ci/"
  },
  "dependencies": {
    "eslint": "^5.14.1",
    "eslint-plugin-local": "^1.0.0",
    "jshint": "^2.10.1"
  }
}
