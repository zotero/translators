{
  "name": "translators-check",
  "version": "1.0.2",
  "description": "Continuous integration of Zotero translators",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint",
    "eslint:skip-warn": "eslint --quiet",
    "errors": "find .. -maxdepth 1 -name '*.js' -print0 | xargs -0 eslint --quiet",
    "test": "find .. -maxdepth 1 -name '*.js' -print0 | xargs -0 eslint",
    "test:self": "find . -path ./node_modules -prune -o -name '*.js' -print0 | xargs -0 eslint -c eslintrc-self",
    "start": "find .. -maxdepth 1 -name '*.js' -print0 | xargs -0 eslint --max-warnings 0"
  },
  "author": "kba+pz",
  "license": "CC0-1.0",
  "repository": {
    "url": "https://github.com/zotero/translators/blob/master/.ci/"
  },
  "devDependencies": {
    "eslint": "^5.14.1",
    "eslint-plugin-notice": "^0.7.7",
    "eslint-plugin-zotero-translator": "file:eslint-plugin-zotero-translator",
    "node-exec-promise": "^1.0.2",
    "simple-git": "^1.107.0",
    "terminal-kit": "^1.27.0"
  }
}
