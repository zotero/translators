{
  "root": true,

	"env": {
		"browser": false,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 7
	},
	"globals": {
		"Zotero": "readonly",
		"Z": "readonly",
		"ZU": "readonly",
		"DOMParser": "readonly",
		"XPathResult": "readonly"
	},
	"rules": {
		"semi": ["warn", "always"],
		"indent": ["warn", "tab"],
		"linebreak-style": ["error", "unix"],
		"no-multi-str": "warn",
		"no-shadow": "off",
		"no-undef": "warn",
		"zotero-translator/not-executable": ["error"],
		"zotero-translator/header-valid-json": ["error"],
		"zotero-translator/translator-id": ["error"],
		"zotero-translator/last-updated": ["error"],

		"zotero-translator/no-for-each": ["warn"],
		"zotero-translator/prefer-index-of": ["warn"],

		"notice/notice": [ "warn", {
			"mustMatch": "GNU Affero General Public License",
			"templateFile": ".ci/AGPL",
			"messages": {
				"whenFailedToMatch": "Must be AGPL licensed"
			}
		 }]
	},
	"plugins": [
		"zotero-translator",
		"notice"
	]
}
